<?xml version="1.0" encoding="utf-8"?>
<manifest package="paijan.memorise"
	xmlns:android="http://schemas.android.com/apk/res/android" >

	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

	<application
		android:allowBackup="true"
		android:icon="@mipmap/logo_noshadow"
		android:label="@string/name_app"
		android:theme="@style/Theme.App" >



		<activity
			android:name=".grouplist.GroupList"
			android:label="@string/name_app"
			android:screenOrientation="portrait" >

			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>



		<activity
			android:name=".tester.WordTesterPager"
			android:label="@string/title_activity_word_tester_pager"
			android:parentActivityName=".grouplist.GroupList"
			android:screenOrientation="portrait" >
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value=".grouplist.GroupList"/>
		</activity>



		<activity
			android:name=".list.WordListManage"
			android:label="@string/title_activity_word_list_manage"
			android:parentActivityName=".grouplist.GroupList"
			android:screenOrientation="portrait" >
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value="paijan.memorise.grouplist.GroupList"/>
		</activity>





	</application>
</manifest>
