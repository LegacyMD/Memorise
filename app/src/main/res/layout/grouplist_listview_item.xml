<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:gravity="center_vertical"
android:orientation="horizontal"
tools:context="paijan.memorise.grouplist.GroupList" >

<ImageView android:id="@+id/grouplist_listview_item_img1"
		   android:layout_width="wrap_content"
		   android:layout_height="wrap_content"
		   android:contentDescription="@null"
		   android:src="@drawable/ic_flag_en"/>

<ImageView android:id="@+id/grouplist_listview_item_img2"
		   android:layout_width="wrap_content"
		   android:layout_height="wrap_content"
		   android:contentDescription="@null"
		   android:src="@drawable/ic_flag_de"/>

<TextView android:id="@+id/grouplist_listview_item_text"
		  style="@style/Theme.ListViewItemText"
		  android:layout_width="wrap_content"
		  android:layout_height="wrap_content"
		  android:singleLine="true"
		  android:layout_marginLeft="@dimen/margin_level_1"
		  android:layout_marginStart="@dimen/margin_level_1"
		  android:text="@string/sample_short" />

</LinearLayout>