<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android = "http://schemas.android.com/apk/res/android"
	xmlns:tools = "http://schemas.android.com/tools"
	android:layout_width = "match_parent"
	android:layout_height = "match_parent"
	android:orientation = "vertical"
	android:paddingEnd = "@dimen/margin_level_1"
	android:paddingLeft = "@dimen/margin_level_1"
	android:paddingRight = "@dimen/margin_level_1"
	android:paddingStart = "@dimen/margin_level_1"
	tools:context = "com.paijan.memorise.wordgroup.tester.ManageFragment" >

	<TableRow android:gravity = "start|center_vertical" >

		<ImageView
			android:id = "@+id/tester_dialog_add_image1"
			android:layout_width = "@dimen/tester_dialog_flag"
			android:layout_height = "@dimen/tester_dialog_flag"
			android:layout_column = "1"
			android:layout_marginEnd = "@dimen/margin_level_2"
			android:layout_marginRight = "@dimen/margin_level_2"
			android:contentDescription = "@null"
			android:scaleType = "fitXY"
			android:src = "@drawable/ic_flag_pl" />

		<TextView
			android:id = "@+id/tester_dialog_add_text1"
			android:layout_width = "wrap_content"
			android:layout_height = "wrap_content"
			android:layout_column = "2"
			android:text = "@string/sample_short"
			android:textAppearance = "@style/Theme.HeaderText" />
	</TableRow >

	<TableRow >

		<EditText
			android:id = "@+id/tester_dialog_add_edittext1"
			style = "@style/Theme.EditText"
			android:layout_width = "0dp"
			android:layout_height = "wrap_content"
			android:layout_column = "0"
			android:layout_weight = "1" />

		<ImageButton
			android:id = "@+id/tester_dialog_add_button1"
			android:layout_width = "wrap_content"
			android:layout_height = "wrap_content"
			android:layout_column = "1"
			android:layout_gravity = "center_vertical"
			android:background = "@color/Transparent"
			android:contentDescription = "@null"
			android:src = "@drawable/ic_action_edit" />
	</TableRow >

	<TableRow
		android:layout_marginTop = "@dimen/margin_level_4"
		android:gravity = "start|center_vertical" >

		<ImageView
			android:id = "@+id/tester_dialog_add_image2"
			android:layout_width = "@dimen/tester_dialog_flag"
			android:layout_height = "@dimen/tester_dialog_flag"
			android:layout_column = "1"
			android:layout_marginEnd = "@dimen/margin_level_2"
			android:layout_marginRight = "@dimen/margin_level_2"
			android:contentDescription = "@null"
			android:scaleType = "fitXY"
			android:src = "@drawable/ic_flag_de" />

		<TextView
			android:id = "@+id/tester_dialog_add_text2"
			android:layout_width = "wrap_content"
			android:layout_height = "wrap_content"
			android:layout_column = "2"
			android:text = "@string/sample_short"
			android:textAppearance = "@style/Theme.HeaderText" />
	</TableRow >

	<TableRow >

		<EditText
			android:id = "@+id/tester_dialog_add_edittext2"
			style = "@style/Theme.EditText"
			android:layout_width = "0dp"
			android:layout_height = "wrap_content"
			android:layout_column = "0"
			android:layout_weight = "1" />

		<ImageButton
			android:id = "@+id/tester_dialog_add_button2"
			android:layout_width = "wrap_content"
			android:layout_height = "wrap_content"
			android:layout_column = "1"
			android:layout_gravity = "center_vertical"
			android:background = "@color/Transparent"
			android:contentDescription = "@null"
			android:src = "@drawable/ic_action_edit" />
	</TableRow >

</TableLayout >