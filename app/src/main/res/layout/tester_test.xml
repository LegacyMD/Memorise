<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
	xmlns:tools = "http://schemas.android.com/tools"
	android:layout_width = "match_parent"
	android:layout_height = "match_parent"
	android:orientation = "vertical"
	android:padding = "@dimen/margin_level_2"
	tools:context = "com.paijan.memorise.wordgroup.tester.TestingFragment" >

	<LinearLayout
		android:layout_width = "match_parent"
		android:layout_height = "wrap_content"
		android:gravity = "center_horizontal"
		android:orientation = "horizontal" >

		<ImageView
			android:id = "@+id/tester_test_flag1"
			android:layout_width = "wrap_content"
			android:layout_height = "wrap_content"
			android:contentDescription = "@null"
			android:src = "@drawable/ic_flag_en" />

		<ImageView
			android:layout_width = "60dp"
			android:layout_height = "match_parent"
			android:contentDescription = "@null"
			android:scaleType = "fitCenter"
			android:src = "@drawable/ic_action_forward" />

		<ImageView
			android:id = "@+id/tester_test_flag2"
			android:layout_width = "wrap_content"
			android:layout_height = "wrap_content"
			android:contentDescription = "@null"
			android:src = "@drawable/ic_flag_de" />

	</LinearLayout >

	<TextView
		android:id = "@+id/tester_test_word"
		style = "@style/Theme.WordTester.Word"
		android:layout_width = "match_parent"
		android:layout_height = "wrap_content"
		android:layout_marginTop = "@dimen/margin_level_2"
		android:gravity = "center_horizontal"
		android:text = "@string/sample_short"
		/>

	<TextView
		android:id = "@+id/tester_test_comment"
		style = "@style/Theme.WordTester.Comment"
		android:layout_width = "match_parent"
		android:layout_height = "wrap_content"
		android:layout_marginBottom = "@dimen/margin_level_3"
		android:layout_marginTop = "@dimen/margin_level_1"
		android:gravity = "center"
		android:text = "@string/sample_long" />

	<EditText
		android:id = "@+id/tester_test_edittext"
		style = "@style/Theme.EditText"
		android:layout_width = "match_parent"
		android:layout_height = "wrap_content" />

</LinearLayout >



