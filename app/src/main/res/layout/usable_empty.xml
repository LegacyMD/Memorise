<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center_horizontal"
	android:orientation="vertical" >

	<TextView android:id="@+id/usable_empty_text"
		style="@style/Theme.FullscreenInformationText"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/margin_level_5"
		android:text="@string/sample_short"/>

	<ImageButton android:id="@+id/usable_empty_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/margin_level_3"
		android:contentDescription="@null"
		android:src="@drawable/ic_action_new"/>

</LinearLayout>